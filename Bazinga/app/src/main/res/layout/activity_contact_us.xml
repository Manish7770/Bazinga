<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contact_us">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/contacttoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbarlayout"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:scaleType="centerCrop"
        android:src="@drawable/home"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:alpha="0.7"
        android:background="@color/cardview_dark_background"
        android:backgroundTint="@color/cardview_dark_background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contacttoolbar"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"

            android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/contacttext"
            android:textAllCaps="true"
            android:fontFamily="serif"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:text="For any queries regarding order "/>

        <Button
            android:layout_width="240dp"
            android:id="@+id/callbazinga"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="BAZINGA :           "
            android:layout_marginBottom="30dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:background="@drawable/buttonbagrount"
            />


        <ImageView
            android:id="@+id/line1"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:fontFamily="serif"
            android:textColor="@android:color/white"
            android:textStyle=""
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:text="APP DEVELOPERS "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:civ_border_width="2dp"
                    android:layout_marginStart="10dp"
                    app:civ_border_color="#FFFFFFFF"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/manish"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold|italic"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="26dp"
                        android:layout_marginStart="28dp"
                        android:text="MANISH CHOUDHARY"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/facemanish"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="20dp"
                            android:tint="@android:color/white"
                            android:src="@drawable/facebook"/>

                        <ImageView
                            android:id="@+id/githubmanish"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/github"
                            android:tint="@android:color/white"/>


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:civ_border_width="2dp"
                    android:layout_marginStart="10dp"
                    app:civ_border_color="#FFFFFFFF"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/art2"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold|italic"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="26dp"
                        android:layout_marginStart="28dp"
                        android:text="ARTHAK KUMAR"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/facearthak"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:tint="@android:color/white"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/facebook"/>

                        <ImageView
                            android:id="@+id/githubarthak"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/github"
                            android:tint="@android:color/white"/>


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/line2"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:textStyle=""
                android:textSize="19sp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:text="PAYMENT PARTNER : PAYTM "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/abtus"
                android:textAllCaps="true"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_horizontal"
                    android:text="ABOUT US"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/ppolicy"
                android:textAllCaps="true"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_horizontal"
                android:text=" PRIVACY POLICY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/rpolicy"
                android:textAllCaps="true"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_horizontal"
                android:text=" REFUND POLICY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/tandc"
                android:textAllCaps="true"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_horizontal"
                android:text=" terms and conditions"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>