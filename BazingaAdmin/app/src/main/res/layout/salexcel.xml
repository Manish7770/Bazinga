<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".salexcel">

    <android.support.v7.widget.Toolbar
        android:id="@+id/salexlToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbarlayout"
        android:elevation="2dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:alpha="0.7"
        android:background="@color/cardview_dark_background"
        android:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/fromdate"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/salexlToolbar"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">

        <info.hoang8f.widget.FButton
            android:elevation="10dp"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            app:cornerRadius="4dp"
            app:shadowHeight="1dp"
            android:text="FROM DATE : "
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:fButtonColor="@color/toolbar_end"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/tvfromdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14-12-2019"
            android:textStyle="bold"
            android:textSize="26dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/white"
            />

        <info.hoang8f.widget.FButton
            android:id="@+id/fromDatebutt"
            android:elevation="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="6dp"
            android:layout_marginEnd="10dp"
            app:shadowHeight="1dp"
            android:text=" CHANGE  "
            android:layout_marginStart="10dp"
            app:fButtonColor="@color/toolbar_baz"
            android:textColor="@android:color/white"
            />


    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/progressxl"
        android:indeterminateTint="@android:color/white"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/fromdate"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <info.hoang8f.widget.FButton
            android:elevation="10dp"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            app:cornerRadius="4dp"
            app:shadowHeight="1dp"
            android:text="TO DATE : "
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:fButtonColor="@color/toolbar_end"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/tvtodate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20-12-2019"
            android:textStyle="bold"
            android:textSize="26dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/white"
            />

        <info.hoang8f.widget.FButton
            android:id="@+id/toDatebutt"
            android:elevation="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="6dp"
            android:layout_marginEnd="10dp"
            app:shadowHeight="1dp"
            android:text=" CHANGE  "
            android:layout_marginStart="10dp"
            app:fButtonColor="@color/toolbar_baz"
            android:textColor="@android:color/white"
            />


    </LinearLayout>


    <info.hoang8f.widget.FButton
        android:id="@+id/salegetxl"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="6dp"
        app:shadowHeight="1dp"
        android:text="GET Sale"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:fButtonColor="@color/toolbar_baz"
        android:textColor="@android:color/white"
        />

</RelativeLayout>