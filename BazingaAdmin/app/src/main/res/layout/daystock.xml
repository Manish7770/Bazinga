<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:background="@color/bagroungdelete"
        android:alpha="0.3"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_of_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Name of Food"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_of_food"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:text="STATUS : "
            android:textColor="@color/fbutton_color_asbestos"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/status_of_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_of_food"
            android:layout_marginStart="100dp"
            android:layout_marginTop="8dp"
            android:text="IN STOCK"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/deletestock"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="32dp"
            app:fButtonColor="@color/bagroungdelete"
            android:text="DELETE"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            app:shadowHeight="0dp"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            app:cornerRadius="5dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/addstock"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="32dp"
            app:fButtonColor="@color/green"
            android:text="ADD"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            app:shadowHeight="0dp"
            android:textColor="@android:color/white"
            app:cornerRadius="5dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>